<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:JuanArangoXamarinApp.ViewModels"
             xmlns:utility="clr-namespace:JuanArangoXamarinApp.Helpers"
             xmlns:resx="clr-namespace:JuanArangoXamarinApp.Resx"
             utility:ViewModelLocator.AutoWireViewModel="True"
             x:DataType="viewModels:LoginViewModel"
             xmlns:local="clr-namespace:JuanArangoXamarinApp;assembly=JuanArangoXamarinApp"
             mc:Ignorable="d"
             x:Class="JuanArangoXamarinApp.Views.LoginPage"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
            <Image Source="{local:ImageResource JuanArangoXamarinApp.Resources.Images.duck.jpg}" WidthRequest="200" HeightRequest="200" />
            <Entry Text="{Binding UserName}" Placeholder="Usuario" Margin="10" />
            <Entry Text="{Binding Password}" Placeholder="Contraseña" IsPassword="True" Margin="10"/>
            <Button VerticalOptions="Center" Text="Login" Command="{Binding LoginCommand}" Style="{StaticResource Botones}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>