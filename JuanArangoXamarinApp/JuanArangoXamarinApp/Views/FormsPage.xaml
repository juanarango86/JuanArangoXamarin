<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:JuanArangoXamarinApp.Data.Models"
            xmlns:controls="clr-namespace:JuanArangoXamarinApp.Controls"
            xmlns:viewModels="clr-namespace:JuanArangoXamarinApp.ViewModels"
            xmlns:utility="clr-namespace:JuanArangoXamarinApp.Helpers"
            utility:ViewModelLocator.AutoWireViewModel="True"
            x:DataType="viewModels:FormsViewModel"
            xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
            x:Class="JuanArangoXamarinApp.Views.FormsPage"
             Padding="10,10">
    <StackLayout VerticalOptions="Center">
        <Entry Text="{Binding Respuesta_1}" Placeholder="Usuario" Margin="10" HorizontalTextAlignment="Center" BackgroundColor="LightYellow" FontSize="24"/>
        <Entry Text="{Binding Respuesta_2}" Placeholder="Usuario" Margin="10" HorizontalTextAlignment="Center" BackgroundColor="LightYellow" FontSize="24"/>
        <Entry Text="{Binding Respuesta_3}" Placeholder="Usuario" Margin="10" HorizontalTextAlignment="Center" BackgroundColor="LightYellow" FontSize="24"/>
        <Button VerticalOptions="Center" Text="Ingresar" Command="{Binding GuardarCommand}" Style="{StaticResource Botones}" Margin="15" />
    </StackLayout>

</ContentPage>
    